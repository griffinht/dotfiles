[general]
status_path = "~/.local/state/vdirsyncer"

[pair contacts]
a = "contacts_local"
b = "contacts_remote"
collections = ["addressbook"]

[storage contacts_local]
type = "filesystem"
path = "~/.local/share/contacts"
fileext = ".vcf"

[storage contacts_remote]
type = "carddav"
url = "http://127.0.0.1:8080"
username = "griffin"
# todo use keyring
#https://vdirsyncer.readthedocs.io/en/latest/keyring.html
password.fetch = ["command", "cat", "~/.local/state/davpassword"]


