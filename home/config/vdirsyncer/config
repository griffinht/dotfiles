a = "calendar_local"
b = "calendar_remote"
collections = ["calendar"]

[storage calendar_local]
type = "filesystem"
path = "~/.local/share/calendar"
fileext = ".ics"

[storage calendar_remote]
type = "caldav"
url = "http://127.0.0.1:8080"
username = "griffin"
# todo use keyring
#https://vdirsyncer.readthedocs.io/en/latest/keyring.html
password.fetch = ["command", "cat", "~/.local/state/davpassword"]
