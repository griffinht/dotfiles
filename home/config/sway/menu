# this just needs to be something unique
set $menu_title mymenutitlecustom

set $menu foot --title=$menu_title sh -c 'compgen -c | sort -u | fzf | xargs swaymsg exec --'

for_window [title="$menu_title"] {
	floating enable
	opacity .9
	border none
}
