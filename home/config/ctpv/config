# use chafa for image previews instead of looking for ueberzug and failing
set forcechafa
# let chafa decide the format, usually sixels which isn't supported by lf
# requires lf sixels fork
# https://github.com/horriblename/lf/
#set autochafa

preview zip application/zip application/java-archive {{
    unzip -l "$f"
}}

preview tar application/x-xz application/x-tar application/gzip {{
    tar -tf "$f"
}}
